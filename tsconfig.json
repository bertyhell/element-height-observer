{
  "compilerOptions": {
    "module": "commonjs",
    "watch": false,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "declaration": true,
    "noEmit": false,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "outDir": "dist",
    "lib": [
      "dom",
      "es6"
    ],
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "exclude": [
    "dist",
    "./vscode",
    ".idea"
  ],
  "include": [
    "node_modules/@types/**/*.d.ts",
    "src/*.ts"
  ]
}
